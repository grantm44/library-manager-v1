extends layout

block content 
  nav
    ul
      li
        a(href='all_books.html') Books
      li
        a(href='all_patrons.html') Patrons
      li
        a(href='all_loans.html') Loans
  body
    h1 Overdue Books
    p
      a.button(href='new_book.html') Create New Book
    p
      | Filters 
      a(href='all_books.html') All
      |  | 
      a(href='overdue_books.html') Overdue
      |  | 
      a(href='checked_books.html') Checked Out
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year Released
      tbody
        each loan in data  
          tr
            td
              a(href='/books/details/'+ loan.Book.id) #{loan.Book.title} 
            td #{loan.Book.author}
            td #{loan.Book.genre}
            td #{loan.Book.first_published}