extends layout

block content
  nav
    ul
      li
        a(href='/books/all') Books
      li
        a(href='/patrons/all') Patrons
      li
        a(href='/loans/all') Loans
  body
    h1 Patron: Return Book  
    p
      strong Book Title:
      |  #{data.book.title}
    p
      strong Loaned By:
      |  #{data.patron.fullName()}
    p
      strong Loaned On:
      |  #{data.loan.loaned_on}
    p
      strong Return By:
      |  #{data.loan.return_by}
    form(method="post")
      p
        label(for='returned_on') Returned on:
        input#returned_on(type='text', name='date', value= moment().format('YYYY-MM-DD'))
      p 
        input(type='submit', value= 'Return Book')
  

