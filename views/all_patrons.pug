extends layout

block content
  nav
    ul
      li
        a(href='/books/all') Books
      li
        a(href='/patrons/all') Patrons
      li
        a(href='/loans/all') Loans
  body
    h1 Patrons
    p
      a.button(href='/patrons/new') Create New Patron
    table
      thead
        tr
          th Name
          th Address
          th Email
          th Library ID
          th Zip
      tbody
        each patron in patrons
          tr
            td
              a(href='patron_detail.html') #{patron.fullName()}
            td #{patron.address}
            td #{patron.email}
            td #{patron.library_id}
            td #{patron.zip_code}
